{
  "name": "wirr",
  "version": "1.0.0",
  "description": "An app to test the reliability of a wikipedia article",
  "main": "app.js",
  "scripts": {
    "start": "node app",
    "server": "nodemon app",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": "warn",
      "import/first": "error"
    }
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": false,
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeltorres1/WiRR.git"
  },
  "authors": "Michael Torres, Kevin Kaminski, Hakeem Almidan, Lwin Ye",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/michaeltorres1/WiRR/issues"
  },
  "homepage": "https://github.com/michaeltorres1/WiRR#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "d3": "^5.12.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mem": "^5.1.1",
    "mongoose": "^5.10.1",
    "request": "^2.88.0",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.4"
  },
  "engines": {
    "node": "10.16.2",
    "npm": "6.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "2.1.1"
  }
}
